<Window x:Class="WpfTest.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:WpfTest"
mc:Ignorable="d"
Title="MainWindow" Height="523" Width="1120" Initialized="Window_Initialized">
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"> <StackPanel Name="StackMain" Orientation="Vertical" Margin="0,0,0,0">
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Button x:Name="btnCheck" Content="Проверить" Width="85" HorizontalAlignment="Center" Click="Btn_Click"></Button>
            </Grid>
            <Grid Grid.Row="2">
                <StackPanel>
                    <Label Name="lblTime" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>